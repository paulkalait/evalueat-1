<article>
  <a id="back-to-dashboard" href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input id="post-title" name="post-title" type="text" value="{{post.title}}" />
       <div id="urlbox">
        <input type="text" id="url-title" name="url-title" placeholder="Insert Url" value="{{post.post_url}}" />
    </div>
      <textarea id="edit-postext">({{post.post_text}})</textarea>
    </div>
    <div>
      
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn" id="save-post-btn">Save post</button>
    <button type="button" class="btn" id="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button class="btn" id="add-comment" type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>